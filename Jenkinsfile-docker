pipeline {
    agent any

    tools {
        jdk 'jdk17'
        nodejs 'node16'
    }

    environment {
        SCANNER_HOME = '' // Initialize SonarQube scanner variable
    }

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout from Git') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/akaspatranobis/hotstar-clone-app-ci-cd-k8.git'
            }
        }

        stage("SonarQube Analysis") {
            steps {
                script {
                    SCANNER_HOME = tool 'sonar-scanner'
                }
                withSonarQubeEnv('sonar-server') {
                    sh '''
                    $SCANNER_HOME/bin/sonar-scanner \
                    -Dsonar.projectName=Hotstar \
                    -Dsonar.projectKey=Hotstar
                    '''
                }
            }
        }

        stage("Quality Gate Check") {
            steps {
                script {
                    timeout(time: 5, unit: 'MINUTES') { // Set a timeout for quality gate check
                        waitForQualityGate abortPipeline: true, credentialsId: 'sonar-token'
                    }
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                sh "npm install"
            }
        }

        stage('Trivy FS Scan') {
            steps {
                script {
                    echo "Scanning files with Trivy..."
                    sh "trivy fs --exit-code 1 --severity HIGH,CRITICAL . || echo 'Security vulnerabilities detected!'"
                }
            }
        }

        stage("Docker Build & Push") {
            steps {
                script {
                    withDockerRegistry(credentialsId: 'docker') {
                        sh '''
                        docker build -t hotstar .
                        docker tag hotstar apatranobis59/hotstar:latest
                        docker push apatranobis59/hotstar:latest
                        '''
                    }
                }
            }
        }

        stage("Trivy Image Scan") {
            steps {
                script {
                    echo "Scanning Docker image with Trivy..."
                    sh "trivy image --exit-code 1 --severity HIGH,CRITICAL apatranobis59/hotstar:latest || echo 'Image vulnerabilities detected!'"
                }
            }
        }

        stage("Deploy Docker Container") {
            steps {
                script {
                    echo "Deploying the Docker container..."
                    sh '''
                    docker stop hotstar || true
                    docker rm hotstar || true
                    docker run -d --name hotstar -p 4001:4000 apatranobis59/hotstar:latest
                    '''
                }
            }
        }
    }
}
